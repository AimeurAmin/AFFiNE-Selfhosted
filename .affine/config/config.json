{
  "$schema": "https://github.com/toeverything/affine/releases/latest/download/config.schema.json",
  "server": {
    "name": "AFFiNE",
    "host": "affine.aimamin.com",
    "https": true,
    "externalUrl": "https://affine.aimamin.com"
  },
  "auth": {
    "allowSignup": true,
    "requireEmailVerification": true,
    "requireEmailDomainVerification": false
  },
  "mailer": {
    "SMTP": {
      "host": "smtp.gmail.com",
      "port": 587,
      "username": "${MAILER_USER}",
      "password": "${MAILER_PASSWORD}",
      "sender": "${MAILER_SENDER}"
    }
  },
  "flags": {
    "allowGuestDemoWorkspace": false
  }
}